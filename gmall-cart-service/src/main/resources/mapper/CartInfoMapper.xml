<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.gmall0715.cart.mapper.CartInfoMapper">
    <resultMap id="cartMap" type="com.atguigu.gmall0715.bean.CartInfo" autoMapping="true">
        <id property="id" column="id"/>
        <!--将skuInfo.price 赋值给cartInfo.skuPrice-->
        <result property="skuPrice" column="price"/>
    </resultMap>
    <select id="selectCartListWithCurPrice" resultMap="cartMap">
        SELECT c.*,s.price
        FROM cart_info c
                 INNER JOIN sku_info s ON c.sku_id = s.id
        WHERE c.user_id = #{userId}
        ORDER BY c.id DESC
    </select>
</mapper>